{
    "id": "5a8276ee-2d07-4f08-a3b3-da9052585347",
    "name": "Webapp Warmup",
    "friendlyName": "Webapp Warmup",
    "description": "This task warmsupp an webapp",
    "helpMarkDown": "[More Information](https://github.com/luuksommers/vsts-webapp-warmup)",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Luuk Sommers",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 4
    },
    "demands": [
        "azureps"
    ],
    "minimumAgentVersion": "1.95.0",
    "inputs": [
        {
            "name": "Url",
            "type": "string",
            "label": "Url",
            "required": true,
            "helpMarkDown": "Provide the url to warmup"
        },
        {
            "name": "RetryCount",
            "type": "string",
            "label": "Retry count",
            "required": false,
            "helpMarkDown": "Provide the number of retries (default 10)"
        },
        {
            "name": "SleepPeriod",
            "type": "string",
            "label": "Sleep period",
            "required": false,
            "helpMarkDown": "Provide the sleep period after failure before retry (default 1)"
        },
        {
            "name": "IgnoreError",
            "type": "boolean",
            "label": "Ignore errors",
            "required": false,
            "helpMarkDown": "Ignore when the website has an error and continue (default false)"
        },
        {
            "name": "Suffixes",
            "type": "multiLine",
            "label": "Add multiple site suffixes to warmup (1 suffix per line)",
            "required": false,
            "properties": {
                "resizable": "true",
                "rows": "10",
                "maxLength": "5000"
            },
            "helpMarkDown": "Ignore when the website has an error and continue (default '/')"
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "$(currentDirectory)\\run-vsts.ps1"
        }
    }
}